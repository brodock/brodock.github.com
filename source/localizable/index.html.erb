---
title: Curriculum Vitae
---

<div id="content">
  <div id="inner">

    <div class="h-card" id="header">

      <div id="title">
        <h1 class="u-name"><%= curriculum.person.display_name %></h1>

        <h2 class="p-job-title"><%= curriculum.person.display_title %></h2>
      </div>

      <div id="contact">
        <div class="contact-info">
          <a id="pdf" href="#"><%= t(:html_version) %></a>
          <%= link_to curriculum.person.website.sub('http://', ''), curriculum.person.website, class: 'u-url' %>
          <%= mail_to curriculum.person.email, class: 'u-email' %>
          <span class="u-tel"><%= curriculum.person.mobile_phone %></span>
          <span class="p-addr"><%= "#{curriculum.person.address.city}, #{curriculum.person.address.state} - #{curriculum.person.address.country}" %></span>
        </div>
      </div>

    </div>

    <div id="main">


      <div class="group-itens">

        <h3><%= t(:skills) %></h3>

        <div class="itens" id="skills">
          <% curriculum.person.skills.each do |skill| %>
            <div class="talent">
              <h2><%= skill.title %></h2>

              <p><%= skill.description %></p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="group-itens">

        <h3><%= t(:technologies) %></h3>

        <div class="itens" id="technologies">
          <% @max_per_column = group_columns_max(3, curriculum.person.technologies) %>
          <% group_columns(3, curriculum.person.technologies).each do |group| %>
            <ul class="talent">
              <% group.each_with_index do |tech, index| %>
                <li<%= ' class="last"' if (index == @max_per_column-1) %>><%= tech %></li>
              <% end %>
            </ul>
          <% end %>

        </div>
      </div>
      <!--// .yui-gf-->


      <div class="group-itens" id="experience">


        <h3><%= t(:experience) %></h3>


        <div class="itens" id="jobs">

          <% curriculum.person.jobs.each do |job| %>
            <div class="job">
              <h4><%= job.organization %></h2>

              <h5><%= job.title %></h3>
              <span class="date"><%= job.time_frame %></span>
              <% job.description.each do |paragraph| %>
                <p><%= paragraph %></p>
              <% end %>
              <% job.tags.each do |tag| %>
                <span class="tags"><%= tag %></span>
              <% end %>
            </div>
          <% end %>

        </div>
      </div>


      <div class="group-itens">


        <h3><%= t(:education) %></h3>


        <div class="itens" id="educational">

          <% curriculum.person.education.each do |edu| %>
            <div class="education">
              <h4><%= edu.institution %></h2>

              <h5><%= edu.degree %></h3>
              <span class="date"><%= edu.time_frame %></span>
              <% edu.description.each do |paragraph| %>
                <p><%= paragraph %></p>
              <% end %>
              <% edu.technologies.each do |tech| %>
                <span class="tags"><%= tech %></span>
              <% end %>
            </div>
          <% end %>

        </div>
      </div>


      <div class="group-itens last">


        <h3><%= t(:congress_and_conferences) %></h3>


        <div class="itens" id="congress-and-conferences">
          <% curriculum.person.congresses.each do |con| %>
            <div class="congress">
              <h4><%= con.name %></h2>

              <span class="location"><%= con.location %></span>
              <span class="date"><%= con.date_year %></span>
            </div>
          <% end %>
        </div>
      </div>


    </div>

    <div id="footer">
      <p><%= curriculum.person.name %> &mdash; <%= mail_to curriculum.person.email %> &mdash; <%= curriculum.person.mobile_phone %> &mdash; <%= skype_to 'brodock' %></p>
    </div>

  </div>
</div>
